<?xml version="1.0" encoding="utf-8" ?>
<access-policy>
    <cross-domain-access>
        <policy>
            <allow-from http-request-headers="/*Specify request headers like Content-Type,SOAPAction*/">
                <domain uri="*"/>
            </allow-from>
            <grant-to>
                <resource include-subpaths="false" path="/"/>
            </grant-to>
        </policy>
    </cross-domain-access>
</access-policy>